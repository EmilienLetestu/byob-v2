{% extends 'base.html.twig' %}

    {% block body %}

        <h1>{{ app.request.get('_route')|title }}</h1>

        <div class="container form-container">
            <div class="col s12 m12">
                {{ form_start(form) }}
                <div>
                    {{ form_label(form.family) }}
                    {{ form_errors(form.family) }}
                    {{ form_widget(form.family, {'attr': {'class' : 'browser-default'}}) }}
                </div>
                <div>
                    {{ form_label(form.category) }}
                    {{ form_errors(form.category) }}
                    {{ form_widget(form.category, {'attr': {'class' : 'browser-default'}}) }}
                </div>
                <div>
                    {{ form_label(form.type) }}
                    {{ form_errors(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class' : 'browser-default'}}) }}
                </div>
                <div>
                    {{ form_label(form.make) }}
                    {{ form_errors(form.make) }}
                    {{ form_widget(form.make, {'attr': {'class' : 'browser-default'}}) }}
                </div>
                <div>
                    {{ form_label(form.designation) }}
                    {{ form_errors(form.designation) }}
                    {{ form_widget(form.designation, {'attr': {'class' : 'browser-default'}}) }}
                </div>
                <div>
                    {{ form_label(form.model) }}
                    {{ form_errors(form.model) }}
                    {{ form_widget(form.model) }}
                </div>
                <div>
                    {{ form_errors(form.price) }}
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                </div>
                <div>
                    <button class="btn waves-effect waves-light color-action-darken" type="submit"><i class="material-icons right">send
                        </i>Valider
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    {% endblock %}



