{% extends 'base.html.twig' %}

    {% block body %}
        <h1>{{ app.request.get('_route')|title }}</h1>
        <div class="container">
            <ul class="collection with-header">
                <li class="collection-header"><h4>Ajouter des tags produits</h4></li>
                {% for refDetail in product[0].refDetails %}
                    <li class="collection-item">
                        <div>
                            {{ refDetail.constantKey }}
                            <a href="{{ path('addProductRefDetail', {'constKey' : refDetail.constantKey }) }}" class="secondary-content"><i class="material-icons">add</i></a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endblock %}