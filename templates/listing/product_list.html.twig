<table>
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Designation
            </th>
            <th>
                Famile
            </th>
            <th>
                Category
            </th>
            <th>
                Type
            </th>
            <th>
                Référence
            </th>
            <th>
                Stocker
            </th>
            {% if app.user.role != 'WAREHOUSEMAN' and app.user.role != 'DELIVERYMAN' %}
            <th>
                <i class="material-icons">info</i>
            </th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>
                {{ product.model }}
            </td>
            <td>
                {{ product.designation.name }}
            </td>
            <td>
                {{ product.family.name }}
            </td>
            <td>
                {{ product.category.name }}
            </td>
            <td>
                {{ product.type.name }}
            </td>
            <td>
                {{ product.reference }}
            </td>
            <td>
                <a href="{{ path('productArrival', {'id' : product.id }) }}"><i class="material-icons">add</i></a>
            </td>
            {% if app.user.role != 'WAREHOUSEMAN' and app.user.role != 'DELIVERYMAN' %}
            <td>
                <a href="{{ path('productInfo', {'id' : product.id }) }}"><i class="material-icons">info</i></a>
            </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if  app.user.role == 'ADMIN' or app.user.role == 'SUPPLY' %}
    <div class="create-entity-large">
        <a href="{{ path('createProduct') }}" class="btn red"><i class="material-icons">add</i></a>
    </div>
{% endif %}