<h2>{{ pendingValidations[0].warehouse.name }}</h2>
<table>
    <thead>
    <tr>
        <th>
           En attente depuis le
        </th>
        <th>
            Demandé par
        </th>
        <th>
            Produit
        </th>
        <th>
            Quantité
        </th>
        <th>
            Valider
        </th>
        <th>
            Refuser
        </th>
    </tr>
    </thead>
    <tbody>
    {% for pendingValidation in pendingValidations %}
        <tr>
            <td>
                {{ pendingValidation.askedOn|date('m-d-Y') }}
            </td>
            <td>
                {{ pendingValidation.askedBy.surname }}
            </td>
            <td>
                {{ pendingValidation.product.model }}
            </td>
            <td>
                {{ pendingValidation.quantity }}
            </td>
            <td>
                <a href="{{ path('validateArrival', { 'pendingId' : pendingValidation.id }) }}" class="validate-link"><i class="material-icons">check</i></a>
            </td>
            <td>
                <a href="{{ path('rejectArrival', { 'pendingId' : pendingValidation.id }) }}" class="reject-link"><i class="material-icons">close</i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>