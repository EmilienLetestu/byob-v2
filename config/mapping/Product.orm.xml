<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Product"
            repository-class="App\Repository\ProductRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="model" column="model" type="string" length="100"/>
        <field name="reference" column="reference" type="string" length="100" unique="true"/>
        <field name="referencedOn" column="referenced_on" type="date"/>
        <field name="lastModification" column="last_modification" type="date" nullable="true"/>

        <one-to-many
                field="inOrderProducts"
                target-entity="App\Entity\InOrderProduct"
                mapped-by="product"
        />

        <one-to-many
                field="pendingValidations"
                target-entity="App\Entity\PendingValidationStock"
                mapped-by="product"
        />

        <one-to-one
                field="inStockProduct"
                target-entity="App\Entity\InStockProduct"
                mapped-by="product"
        />

        <many-to-one
                field="referencedBy"
                target-entity="App\Entity\User"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="referenced_by"
                    referenced-column-name="id"
                    />
        </many-to-one>

        <many-to-one
                field="family"
                target-entity="App\Entity\Family"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="family_id"
                    referenced-column-name="id"
            />
        </many-to-one>

        <many-to-one
                field="category"
                target-entity="App\Entity\Category"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="category_id"
                    referenced-column-name="id"
            />
        </many-to-one>

        <many-to-one
                field="make"
                target-entity="App\Entity\Make"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="make_id"
                    referenced-column-name="id"
            />
        </many-to-one>

        <many-to-one
                field="type"
                target-entity="App\Entity\Type"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="type_id"
                    referenced-column-name="id"
            />
        </many-to-one>

        <many-to-one
                field="designation"
                target-entity="App\Entity\Designation"
                inversed-by="products">

            <join-column
                    nullable="false"
                    name="designation_id"
                    referenced-column-name="id"
            />
        </many-to-one>

    </entity>
</doctrine-mapping>